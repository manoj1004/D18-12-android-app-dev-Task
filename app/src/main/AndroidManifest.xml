<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.manojmurali.task">

    <application>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SaveNewProjects"
            android:parentActivityName=".MainProjectListActivity"
            android:theme="@style/Theme.AppCompat" />
        <activity
            android:name=".MainProjectListActivity"
            android:label="@string/title_activity_main_project_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat" />
        <activity
            android:name=".MainEmployeeListActivity"
            android:label="@string/title_activity_main_employee_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat" />
        <activity
            android:name=".AddOrUpdateEmployees"
            android:parentActivityName=".MainEmployeeListActivity"
            android:theme="@style/Theme.AppCompat"></activity>
        <activity
            android:name=".Assignment"
            android:label="@string/title_activity_assignment"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>